<% meses = {1 => "Janeiro", 2 => "Fevereiro", 3 => "Março", 4 => "Abril", 5 => "Maio", 6 => "Junho",
			7 => "Julho", 8 => "Agosto", 9 => "Setembro", 10 => "Outubro", 11 => "Novembro", 12 => "Dezembro"} %>

<div class="months-canvas fancy-scrollbar">
	<div class="months-area">
		<div class="row rowgrid">
			<div class="col-xs-12">
				<div class="row rowgrid">
					<% for i in (1..12) %>
						<div class="col-xs-1 <%= if i == 1 then 'month-first' end %>">
							<div class="box month">

								<div class="month-header">
									<span class="month-name"><h5><%= meses[i] %></h5></span>
									<span class="money-value"><h5>$ 1.700,00</h5></span>
								</div>
								<div class="month-content fancy-scrollbar">
									
			                            <div id="panel1" class="panel category panel-default magic-element isotope-item" style="transform: translate3d(0px, 0px, 0px);">
		                                    <div class="panel-heading category-header credit">
		                                        <div class="panel-icon"><i class="icon ion-navicon-round"></i></div>
		                                        <div class="panel-actions">
		                                            <a role="button" data-expand="#panel1" title="expand" class="btn btn-sm btn-icon">
		                                                <i class="icon ion-arrow-resize"></i>
		                                            </a>
		                                            <a role="button" data-collapse="#panel1" title="collapse" class="btn btn-sm btn-icon">
		                                                <i class="icon ion-chevron-down"></i>
		                                            </a>
		                                        </div><!-- /panel-actions -->
		                                        <h3 class="panel-title">Receita</h3>
		                                    </div><!-- /panel-heading -->
		                                    <div class="panel-body category-body" style="display: block;">
		                                    <% for z in (1..2) %>
			                                    	<div id="panel<%= z %>1" class="panel category panel-default magic-element isotope-item" style="transform: translate3d(0px, 0px, 0px);">
					                                    <div class="panel-heading subcategory-header subcategory credit">
					                                        <div class="panel-icon"><i class="icon ion-navicon-round"></i></div>
					                                        <div class="panel-actions">
					                                            <a role="button" data-collapse="#panel<%= z %>1" title="collapse" class="btn btn-sm btn-icon">
					                                                <i class="icon ion-chevron-down"></i>
					                                            </a>
					                                        </div><!-- /panel-actions -->
					                                        <h4 class="panel-title">Categoria</h4>
					                                    </div><!-- /panel-heading -->
					                                    <div class="panel-body category-body" style="display: block;">
					                                    	<% for j in (1..2) %>
																<div class="box entry">
							                                        <div class="row rowgrid">
							                                        	<div class="col-xs-8 entry-left">
							                                        		<span class="glyphicon glyphicon-calendar">30</span>
							                                        	</div>
							                                        	<div class="col-xs-4 entry-right">
							                                        		<span class="glyphicon glyphicon-ok"></span>
							                                        		<span class="glyphicon glyphicon-pencil"></span>
							                                        		<span class="glyphicon glyphicon-remove"></span>
							                                        	</div>
							                                        </div>
							                                        <div class="row rowgrid">
							                                        	<div class="col-xs-8 entry-left">Nome de até 25 caracteres</div>
							                                        	<div class="col-xs-4 entry-right">$1.700,00</div>
							                                        </div>
																</div>
															<% end %>
					                                    </div><!-- /panel-body -->
					                                </div>
					                            <% end %>
		                                    </div><!-- /panel-body -->

		                                </div>

		                                <div id="panel3" class="panel category panel-default magic-element isotope-item" style="transform: translate3d(0px, 0px, 0px);">
		                                    <div class="panel-heading category-header debit">
		                                        <div class="panel-icon"><i class="icon ion-navicon-round"></i></div>
		                                        <div class="panel-actions">
		                                            <a role="button" data-expand="#panel3" title="expand" class="btn btn-sm btn-icon">
		                                                <i class="icon ion-arrow-resize"></i>
		                                            </a>
		                                            <a role="button" data-collapse="#panel3" title="collapse" class="btn btn-sm btn-icon">
		                                                <i class="icon ion-chevron-down"></i>
		                                            </a>
		                                        </div><!-- /panel-actions -->
		                                        <h3 class="panel-title">Despesas</h3>
		                                    </div><!-- /panel-heading -->
		                                    <div class="panel-body category-body" style="display: block;">

		                                    	<% for z in (1..2) %>
			                                    	<div id="panel<%= z %>2" class="panel category panel-default magic-element isotope-item" style="transform: translate3d(0px, 0px, 0px);">
					                                    <div class="panel-heading subcategory-header subcategory debit">
					                                        <div class="panel-icon"><i class="icon ion-navicon-round"></i></div>
					                                        <div class="panel-actions">
					                                            <a role="button" data-collapse="#panel<%= z %>2" title="collapse" class="btn btn-sm btn-icon">
					                                                <i class="icon ion-chevron-down"></i>
					                                            </a>
					                                        </div><!-- /panel-actions -->
					                                        <h4 class="panel-title">Categoria</h4>
					                                    </div><!-- /panel-heading -->
					                                    <div class="panel-body category-body" style="display: block;">
					                                    	<% for j in (1..2) %>
																<div class="box entry">
							                                        <div class="row rowgrid">
							                                        	<div class="col-xs-8 entry-left">
							                                        		<span class="glyphicon glyphicon-calendar">30</span>
							                                        	</div>
							                                        	<div class="col-xs-4 entry-right">
							                                        		<span class="glyphicon glyphicon-ok"></span>
							                                        		<span class="glyphicon glyphicon-pencil"></span>
							                                        		<span class="glyphicon glyphicon-remove"></span>
							                                        	</div>
							                                        </div>
							                                        <div class="row rowgrid">
							                                        	<div class="col-xs-8 entry-left">Nome de até 25 caracteres</div>
							                                        	<div class="col-xs-4 entry-right">$1.700,00</div>
							                                        </div>
																</div>
															<% end %>
					                                    </div><!-- /panel-body -->
					                                </div>
					                            <% end %>
		                                    </div><!-- /panel-body -->

		                                </div>

								</div>
							</div>
						</div>
					<% end %>
				</div>
			</div>
		</div>
	</div>
</div>