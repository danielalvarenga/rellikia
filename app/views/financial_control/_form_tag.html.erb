<div class="modal fade modal-add-tag" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-sm">
    <div class="modal-content">
      <%= form_for Tag.new, class: "form-horizontal", role: "form" do |f| %>
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
            <h4 class="modal-title">Nova Tag</h4>
          </div>
          <div class="modal-body">
            <div class="form-group">
              <div class="input-group">
                <%= f.text_field :name, class: "form-control", placeholder: "Nome" %>
                <span class="input-group-btn">
                <%= f.submit "Adicionar", class: "btn btn-success" %>
              </span>
              </div>
            </div>
          </div>
      <% end %>
    </div>
  </div>
</div>