<div class="modal fade modal-add-category" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-sm">
    <div class="modal-content">
        <%= form_for Category.new, class: "form-horizontal", role: "form", remote: true do |f| %>
            <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token%>" />
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
              <h4 class="modal-title">Nova Categoria</h4>
            </div>
            <div class="modal-body">
              <div class="form-group">
                <div class="input-group">
                  <%= f.text_field :name, class: "form-control", placeholder: "Nome" %>
                  <span class="input-group-btn">
                <%= f.submit "Adicionar", class: "btn btn-success" %>
              </span>
                </div>
              </div>
            </div>
        <% end %>
    </div>
  </div>
</div>

<% content_for :js do %>
    $('form#new_category').bind('ajax:success',function(xhr, result){
        alert(result.responseText);
        $('select#entry_category_id').append("<option value='1'>Categoria</option>");
        $('input#category_name').val("")
    });
<% end %>