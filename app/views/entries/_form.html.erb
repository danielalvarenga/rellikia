<%= form_for(@entry) do |f| %>
  <% if @entry.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@entry.errors.count, "error") %> prohibited this entry from being saved:</h2>

      <ul>
      <% @entry.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :positive %><br>
    <%= f.check_box :positive %>
  </div>
  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>

  <%= f.fields_for :entry_details do |ed| %>
    <div class="field">
      <%= ed.label :amount %><br>
      <%= ed.text_field :amount %>
    </div>
        <%= ed.label :paid %><br>
        <%= ed.check_box :paid %>
    <div class="field">
      <%= ed.label :day %><br>
      <%= ed.number_field :day %>
    </div>
    <div class="field">
      <%= ed.label :month %><br>
      <%= ed.number_field :month %>
    </div>
    <div class="field">
      <%= ed.label :year %><br>
      <%= ed.number_field :year %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
